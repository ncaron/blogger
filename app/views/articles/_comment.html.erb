<div>
  <h4>Comment by <%= comment.author_name %></h4>
  <p>Posted <%= distance_of_time_in_words(comment.article.created_at, comment.created_at) %> later</p>
  <p class="comment">
    <%= comment.body %>
    <% if logged_in? %>
      <br />
      <%= link_to "delete", [comment.article, comment], method: :delete, data: {confirm: "Really delete the comment?"} %>
    <% end %>
  </p>
</div>
